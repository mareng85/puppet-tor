SocksPort <%= @socks_port %> # Default: Bind to localhost:9050 for local connections.

Log notice syslog

# Log debug stderr

<% if @deamon == true %>
  RunAsDaemon 1
<% end %>

DataDirectory <%= @data_dir %>

<% if @use_control_port == true %>
  ControlPort <%= @control_port %>

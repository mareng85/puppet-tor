<% @socks_port.each do |socksportarray| -%>
SocksPort <%= socksportarray %>
<% end -%>

<% @socks_policy.each do |sockspolicyarray| -%>
SocksPolicy <%= sockspolicyarray %>
<% end -%>

Log notice syslog

# Log debug stderr

<% if @deamon  %>
RunAsDaemon 1
<% end %>

DataDirectory <%= @data_dir %>

<% if @control_port  %>
ControlPort <%= @control_port %>
CookieAuthentication 1
<% end %>

<% if @dns_port %>       
DNSPort <%= @dns_port %>
AutomapHostsOnResolve 1
AutomapHostsSuffixes .exit,.onion
<% end %>

<% if @tor_relay or @tor_exit_node %>
ORPort <%= @or_port %>
Nickname <%= @nickname %>
RelayBandwidthRate <%= @bandwidthrate %>
RelayBandwidthBurst <%= @bandwidthburst %>
ContactInfo <%= @contactinfo %>
<% @exit_policy.each do |exitpolicyarray| -%>
ExitPolicy <%= exitpolicyarray %>
<% end -%>
<% end %>


SocksPort <%= @socks_port %> # Default: Bind to localhost:9050 for local connections.

Log notice syslog

# Log debug stderr

<% if @deamon == true %>
  RunAsDaemon 1
<% end %>

DataDirectory <%= @data_dir %>

<% if @use_control_port == true %>
  ControlPort <%= @control_port %>
  CookieAuthentication 1
<% end %>

<% if @use_dns_port == true %>       
  DNSPort <%= @dns_port %>
  AutomapHostsOnResolve 1
  AutomapHostsSuffixes .exit,.onion
<% end %>

<% if @tor_relay == true %>
  ORPort <%= @or_port %>
  Nickname <%= @nickname %>
  RelayBandwidthRate 1024 KB
  RelayBandwidthBurst 1024 KB
  ContactInfo your name <your@email>
  ExitPolicy <%= @exit_policy %> *:*
<% end %>
